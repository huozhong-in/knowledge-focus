{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:path:default",
    "core:resources:default",
    "core:window:allow-start-dragging",
    "opener:default",
    "store:default",
    "fs:default",
    "process:default",
    "updater:default",
    "dialog:default",
    "log:default",
    "macos-permissions:default",
    "window-state:default",
    {
      "identifier": "fs:scope-appdata",
      "allow": [
        {
          "path": "$APPDATA/**/*"
        },
        {
          "path": "$APPLOCALDATA/**/*"
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "../../../../api/.venv/bin/python",
          "sidecar": true,
          "args": [
            {
              "validator": ".*"
            },
            "--port",
            {
              "validator": "\\d+"
            },
            "--host",
            {
              "validator": "[\\w\\.]+"
            }
          ]
        },
        {
          "name": "venv/bin/python",
          "sidecar": true,
          "args": [
            {
              "validator": ".*"
            },
            "--port",
            {
              "validator": "\\d+"
            },
            "--host",
            {
              "validator": "[\\w\\.]+"
            }
          ]
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://127.0.0.1:60000"
        }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$AUDIO/**/*"
        },
        {
          "path": "$CACHE/**/*"
        },
        {
          "path": "$CONFIG/**/*"
        },
        {
          "path": "$DATA/**/*"
        },
        {
          "path": "$LOCALDATA/**/*"
        },
        {
          "path": "$DESKTOP/**/*"
        },
        {
          "path": "$DOCUMENT/**/*"
        },
        {
          "path": "$DOWNLOAD/**/*"
        },
        {
          "path": "$EXE/**/*"
        },
        {
          "path": "$FONT/**/*"
        },
        {
          "path": "$HOME/**/*"
        },
        {
          "path": "$PICTURE/**/*"
        },
        {
          "path": "$PUBLIC/**/*"
        },
        {
          "path": "$RUNTIME/**/*"
        },
        {
          "path": "$TEMPLATE/**/*"
        },
        {
          "path": "$VIDEO/**/*"
        },
        {
          "path": "$RESOURCE/**/*"
        },
        {
          "path": "$APP/**/*"
        },
        {
          "path": "$LOG/**/*"
        },
        {
          "path": "$TEMP/**/*"
        },
        {
          "path": "$APPCONFIG/**/*"
        },
        {
          "path": "$APPDATA/**/*"
        },
        {
          "path": "$APPLOCALDATA/**/*"
        },
        {
          "path": "$APPCACHE/**/*"
        },
        {
          "path": "$APPLOG/**/*"
        }
      ]
    },
    {
      "identifier": "opener:allow-reveal-item-in-dir",
      "allow": [
        {
          "path": "$AUDIO/**/*"
        },
        {
          "path": "$CACHE/**/*"
        },
        {
          "path": "$CONFIG/**/*"
        },
        {
          "path": "$DATA/**/*"
        },
        {
          "path": "$LOCALDATA/**/*"
        },
        {
          "path": "$DESKTOP/**/*"
        },
        {
          "path": "$DOCUMENT/**/*"
        },
        {
          "path": "$DOWNLOAD/**/*"
        },
        {
          "path": "$EXE/**/*"
        },
        {
          "path": "$FONT/**/*"
        },
        {
          "path": "$HOME/**/*"
        },
        {
          "path": "$PICTURE/**/*"
        },
        {
          "path": "$PUBLIC/**/*"
        },
        {
          "path": "$RUNTIME/**/*"
        },
        {
          "path": "$TEMPLATE/**/*"
        },
        {
          "path": "$VIDEO/**/*"
        },
        {
          "path": "$RESOURCE/**/*"
        },
        {
          "path": "$APP/**/*"
        },
        {
          "path": "$LOG/**/*"
        },
        {
          "path": "$TEMP/**/*"
        },
        {
          "path": "$APPCONFIG/**/*"
        },
        {
          "path": "$APPDATA/**/*"
        },
        {
          "path": "$APPLOCALDATA/**/*"
        },
        {
          "path": "$APPCACHE/**/*"
        },
        {
          "path": "$APPLOG/**/*"
        }
      ]
    }
  ]
}