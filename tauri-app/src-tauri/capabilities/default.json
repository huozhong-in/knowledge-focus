{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "../../../../api/.venv/bin/python",
          "sidecar": true,
          "args": [
            "../../../../api/main.py",
            "--port",
            {
              "validator": "\\d+"
            },
            "--host",
            {
              "validator": "[\\w\\.]+"
            }
          ]
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "../../../../api/.venv/bin/python",
          "sidecar": true,
          "args": [
            "../../../../api/start_api.py",
            "--port",
            {
              "validator": "\\d+"
            },
            "--host",
            {
              "validator": "[\\w\\.]+"
            }
          ]
        }
      ]
    }
  ]
}
