{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:default",
    "opener:default",
    "core:path:default",
    "core:resources:default",
    "core:window:allow-start-dragging",
    "store:default",
    "fs:default",
    "process:default",
    {
      "identifier": "fs:scope-appdata",
      "allow": [
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPLOCALDATA/*"
        }
      ]
    },
    "updater:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "../../../../api/.venv/bin/python",
          "sidecar": true,
          "args": [
            "../../api/main.py",
            "--port",
            {
              "validator": "\\d+"
            },
            "--host",
            {
              "validator": "[\\w\\.]+"
            }
          ]
        },
        {
          "name": "venv/bin/python",
          "sidecar": true,
          "args": [
            {
              "validator": ".*"
            },
            "--port",
            {
              "validator": "\\d+"
            },
            "--host",
            {
              "validator": "[\\w\\.]+"
            }
          ]
        }
      ]
    },
    "dialog:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://127.0.0.1:60000"
        }
      ]
    }
  ]
}